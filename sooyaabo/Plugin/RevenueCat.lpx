[Argument]
RevenueCat-chxm1023 = switch, false, true, tag = RevenueCat-chxm1023, desc = 是否启用chxm1023的脚本来解锁RevenueCat系列
RevenueCat-Guding88 = switch, false, true, tag = RevenueCat-Guding88, desc = 是否启用Guding88的脚本来解锁RevenueCat系列
RevenueCat-ddgksf2013 = switch, false, true, tag = RevenueCat-ddgksf2013, desc = 是否启用ddgksf2013的脚本来解锁RevenueCat系列
RevenueCat-Yu9191 = switch, false, true, tag = RevenueCat-Yu9191, desc = 是否启用Yu9191的脚本来解锁RevenueCat系列

[Rewrite]
^https:\/\/api\.lianjiu\.fun\/app\/api\/v1\/profile reject

[Script]
# chxm1023
http-response ^https:\/\/api\.(revenuecat|rc-backup)\.com\/.+\/(receipts$|subscribers\/?(.*?)*$) script-path = https://raw.githubusercontent.com/chxm1023/Rewrite/main/Reheji.js, requires-body = true, tag = [RevenueCat]会员解锁响应@chxm1023, enable={RevenueCat-chxm1023}
http-request ^https:\/\/api\.(revenuecat|rc-backup)\.com\/.+\/(receipts$|subscribers\/?(.*?)*$) script-path = https://raw.githubusercontent.com/chxm1023/Rewrite/main/Reheji.js, requires-body = false, tag = [RevenueCat]会员解锁请求@chxm1023, enable={RevenueCat-chxm1023}

# Guding88
http-response ^https?:\/\/api\.(revenuecat|rc-backup)\.com\/v1\/(subscribers\/[^\/]+$|receipts$) script-path = https://raw.githubusercontent.com/Guding88/Script/main/APPheji_Revenuecat.js, requires-body = true, tag = [RevenueCat]会员解锁响应@Guding88, enable={RevenueCat-Guding88}
http-request ^https?:\/\/api\.(revenuecat|rc-backup)\.com\/v1\/(subscribers\/[^\/]+$|receipts$) script-path = https://raw.githubusercontent.com/Guding88/Script/main/APPheji_Revenuecat.js, requires-body = false, tag = [RevenueCat]会员解锁请求@Guding88, enable={RevenueCat-Guding88}

# ddgksf2013
http-response ^https:\/\/api\.(revenuecat|rc-backup)\.com\/.+\/(receipts$|subscribers\/?(.*?)*$) script-path = https://ddgksf2013.top/scripts/revenuecat.vip.js, requires-body = true, tag = [RevenueCat]会员解锁响应@ddgksf2013, enable={RevenueCat-ddgksf2013}
http-request ^https:\/\/api\.(revenuecat|rc-backup)\.com\/.+\/(receipts$|subscribers\/?(.*?)*$) script-path = https://raw.githubusercontent.com/ddgksf2013/Scripts/master/deleteHeader.js, requires-body = false, tag = [RevenueCat]会员解锁请求@ddgksf2013, enable={RevenueCat-ddgksf2013}

# Yu9191
http-response ^https:\/\/(api\.revenuecat\.com|api\.rc-backup\.com)\/.+\/(receipts$|subscribers\/[^/]+$) script-path = https://raw.githubusercontent.com/Yu9191/Rewrite/main/Revenuecat.js, requires-body = true, tag = [RevenueCat]会员解锁响应@Yu9191, enable={RevenueCat-Yu9191}
http-request ^https:\/\/(api\.revenuecat\.com|api\.rc-backup\.com)\/.+\/(receipts$|subscribers\/[^/]+$) script-path = https://raw.githubusercontent.com/Yu9191/Rewrite/main/Revenuecat.js, requires-body = false, tag = [RevenueCat]会员解锁请求@Yu9191, enable={RevenueCat-Yu9191}

[MitM]
hostname = api.revenuecat.com, api.rc-backup.com, api.lianjiu.fun